{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "运行 main.py",
            "type": "shell",
            "command": "py",
            "args": [
                "-3.13",
                "main.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$pylint"
        },
        {
            "label": "检查兼容性",
            "type": "shell",
            "command": "py",
            "args": [
                "-3.13",
                "check_compatibility.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$pylint"
        },
        {
            "label": "安装依赖",
            "type": "shell",
            "command": "py",
            "args": [
                "-3.13",
                "-m",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "清理 __pycache__",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Get-ChildItem -Path . -Include __pycache__ -Recurse -Force | Remove-Item -Recurse -Force"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}